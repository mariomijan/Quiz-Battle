<Window x:Class="WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Login" Height="262.5" Width="453.521" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="usernameTextbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="185,71,0,0"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="185,102,0,0" Height="23" Width="120"/>
        <Label x:Name="usernameLabel" Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="107,68,0,0"/>
        <Label x:Name="passwordLabel" Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="107,99,0,0" RenderTransformOrigin="0.339,0.462"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="107,135,0,0" Click="loginButton_Click"/>
        <Button x:Name="registerButton" Content="Register" HorizontalAlignment="Left" Margin="231,135,0,0" VerticalAlignment="Top" Width="74" Click="registerButton_Click"/>

    </Grid>
</Window>
