@model MVCClient.Models.LobbyViewModel

@{
    ViewBag.Title = "Create a lobby";
}

<h2>Create Lobby</h2>

@using (Html.BeginForm("CreateLobby", "Quiz"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Lobby</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.HiddenFor(x => x.categoryId, new { categoryId = Model.categoryId })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Lobby", new { categoryId = Model.categoryId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("form").submit(function () {
            $(this).find('input[type="submit"]').prop("disabled", true);
        });
    </script>
}
