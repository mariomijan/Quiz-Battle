
@{
    ViewBag.Title = "FindUser";
}

<h2>Search</h2>

<table class="table table-hover">

    <thead>
        <tr>
            <td>Name </td>
            <td>LastName </td>
            <td>Country</td>
            <td>Phone </td>
            <td>Point</td>
            <td></td>
        </tr>

    </thead>
    <tbody>
        @if (Model != null)
        {
            <tr>
                <td>@Model.name </td>
                <td>@Model.lastName </td>
                <td>@Model.country</td>
                <td>@Model.phone </td>
                <td>@Model.point </td>
            </tr>
        }
    </tbody>
</table>
<h2>@TempData["Message"]</h2>

@using (Html.BeginForm())
{
    <input class="form-control search-txt" type="text" name="username" />
    <button class="btn btn-success search-btn" type="submit">Seach for a user</button>

}