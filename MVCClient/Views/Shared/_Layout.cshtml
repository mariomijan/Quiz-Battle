@using MVCClient.Security
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quiz-Battle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/customstyle")
    @*?v={1/string}")*@
    @RenderSection("customCss", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Quiz-Battle", "Index", "Quiz", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Search", "findUser", "User")</li>
                    <li>@Html.ActionLink("My Profile", "Index", "Profile")</li>
                    
                    @if (SessionLogin.UserIsInSession())
                    {
                      <li>@Html.ActionLink("Log Off", "LogOff", "Profile")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @* Message to user if he disables javascript *@
    <noscript>
        We're sorry but you can't play the quiz with javascript disabled, please enable javascript to play !
    </noscript>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Quiz-Battle</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
